
<div class="col-8 text-dark">
<h3>Bank Accounts</h3>

<table  class="table">
  <thead>
    <tr>
      <th scope="col">Bank name</th>
      <th scope="col">Acc no</th>
      <th scope="col">Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td scope="row"><%= bank_account.bank_name %></td>
        <td scope="row"><%= bank_account.acc_no %></td>
        <td scope="row"><%= bank_account.balance %></td>
        
        <td scope="row"><%= link_to 'Edit', edit_bank_account_path(bank_account), 
        :class => "btn btn-dark text-white" %></td>
        <td scope="row"><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-dark text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

  <%= link_to 'New Bank Account', new_bank_account_path, :class => "btn btn-dark text-white" %>


