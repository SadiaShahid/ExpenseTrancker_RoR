<body class='login_back'>
<div class="container bg-white contain">
  <div class="row justify-content-center text-dark">
    <h1 class="col-sm-4 text-dark">Login</h1>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="row justify-content-center text-dark">
      <div class="col-sm-4">
        <div class="mb-3">
          
          <%= f.input :email, autofocus: true, autocomplete: "email", class: "form-group " %>
        </div>

        <div class="mb-3">
          <%= f.input :password, autocomplete: "current-password", class: "form-control" %>
        </div>

      </div>
    </div>

    <div class="row justify-content-center text-dark">
      <div class="col-sm-4 text-dark">
        <%= f.submit "Log in", class: "btn btn-success btn-lg btn-block" %>
      </div>
    </div>
  <% end %>

  <div class="row justify-content-center text-dark">
    <div class="col-sm-4 text-dark"><br />
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
</body>